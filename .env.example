# ============================================
# Araponga - Variáveis de Ambiente
# ============================================
# Copie este arquivo para .env e ajuste os valores conforme necessário
# cp .env.example .env

# ============================================
# ASP.NET Core
# ============================================
ASPNETCORE_ENVIRONMENT=Development

# ============================================
# PostgreSQL
# ============================================
POSTGRES_USER=araponga
POSTGRES_PASSWORD=araponga
POSTGRES_DB=araponga
POSTGRES_PORT=5432

# ============================================
# Redis
# ============================================
REDIS_PASSWORD=araponga
REDIS_PORT=6379
REDIS_CONNECTION_STRING=redis:6379,password=araponga,abortConnect=false

# ============================================
# MinIO (S3-compatible Storage)
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET_NAME=araponga-media
MINIO_REGION=us-east-1
MINIO_PREFIX=media

# ============================================
# JWT (OBRIGATÓRIO - Gere um secret forte!)
# ============================================
# Gere com: openssl rand -base64 32
# OU: pwsh -Command "[Convert]::ToBase64String([System.Security.Cryptography.RandomNumberGenerator]::GetBytes(32))"
JWT_SIGNINGKEY=CHANGE_THIS_IN_PRODUCTION_USE_AT_LEAST_32_CHARACTERS_SECRET_KEY

# ============================================
# CORS
# ============================================
# Desenvolvimento: pode usar * (wildcard)
# Produção: especifique origens específicas
CORS_ALLOWED_ORIGIN_0=*

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PERMIT=60
RATE_LIMIT_WINDOW=60
RATE_LIMIT_QUEUE=0

# ============================================
# Media Storage
# ============================================
# Opções: Local, S3, AzureBlob
MEDIA_STORAGE_PROVIDER=S3

# ============================================
# API Port
# ============================================
API_PORT=8080

# ============================================
# Produção - Configurações Adicionais
# ============================================
# Descomente e configure para produção:

# Email (opcional)
# EMAIL__SMTP__HOST=smtp.gmail.com
# EMAIL__SMTP__PORT=587
# EMAIL__SMTP__USERNAME=seu-email@gmail.com
# EMAIL__SMTP__PASSWORD=sua-senha

