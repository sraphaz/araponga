<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.22" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Araponga.Application\Araponga.Application.csproj" />
    <ProjectReference Include="..\Araponga.Infrastructure\Araponga.Infrastructure.csproj" />
  </ItemGroup>

  <ItemGroup>
    <DocsSyncFiles Include="wwwroot\index.html" />
    <DocsSyncFiles Include="wwwroot\styles.css" />
  </ItemGroup>

  <Target Name="SyncDocsForGitHubPages" AfterTargets="Build">
    <PropertyGroup>
      <DocsOutputDir>$(MSBuildProjectDirectory)\..\..\docs</DocsOutputDir>
    </PropertyGroup>
    <Message Text="Syncing GitHub Pages assets to $(DocsOutputDir)" Importance="high" />
    <Copy SourceFiles="@(DocsSyncFiles)" DestinationFolder="$(DocsOutputDir)" SkipUnchangedFiles="true" />
  </Target>

</Project>
