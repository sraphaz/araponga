{
    "version": "0.2.0",
    "configurations": [
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md.
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/backend/Arah.Api/bin/Debug/net8.0/Arah.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/backend/Arah.Api",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "arah (Flutter) - Chrome",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "cwd": "${workspaceFolder}/frontend/arah.app",
            "args": [
                "-d", "chrome",
                "--dart-define=BFF_BASE_URL=http://localhost:5001",
                "--dart-define=flutter.flutter_map.unblockOSM=OpenStreetMap data is free for everyone to use."
            ]
        },
        {
            "name": "arah (Flutter)",
            "request": "launch",
            "type": "dart",
            "cwd": "${workspaceFolder}/frontend/arah.app",
            "args": [
                "--dart-define=BFF_BASE_URL=http://localhost:5001",
                "--dart-define=flutter.flutter_map.unblockOSM=OpenStreetMap data is free for everyone to use."
            ]
        }
    ]
}